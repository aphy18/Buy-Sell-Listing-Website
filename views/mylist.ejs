    crossorigin="anonymous" referrerpolicy="no-referrer"></script>
  <script type="text/javascript" src="../routes/mylist.js"></script>
</head>

<body>
  <%- include('partials/_header') %>
    <div class="addcar-form">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <div class="section-heading">
              <h2>My<em>Favourite List of Cars</em></h2>
            </div>
          </div>
          <pre>

      <!-- <%=JSON.stringify(fav) %> -->
    </pre>
          <% for(let list of fav){ %>
            <div class="col-md-4">
              <div class="service-item">
                <img src="<%= list.photo %>" style="width:100%;" />
                <div class="down-content" data-id="<%= list.car_id%>">
                  <h4>
                    <%= list.car_name %>
                  </h4>
                  <div style="margin-bottom:10px;">
                    <span>
                      &nbsp; <sup>$</sup>
                      <%= list.price %>
                    </span>
                  </div>
                  <p>
                    <i class="fa fa-dashboard"></i>
                    <%= list.brand %> &nbsp;&nbsp;&nbsp;
                      <i class="fa fa-cube"></i>
                      <%= list.colour %> &nbsp;&nbsp;&nbsp;
                        <i class="fa fa-cog"></i>
                        <%= list.description %> &nbsp;&nbsp;&nbsp;
                  </p>
                  <a href="/api/search" class="filled-button">View More</a>
                </div>
              </div>
            </div>
            <%}%>
        </div>
      </div>
    </div>
    </div>
    <div class="sub-footer">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <p>
              Copyright Â© 2021 Akhila, Chandni, Aphy
            </p>
          </div>
        </div>
      </div>
</body>
</html>
